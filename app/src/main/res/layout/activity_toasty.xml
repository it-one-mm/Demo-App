<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ToastyActivity">

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/view_margin"
        android:onClick="displayToasty"
        android:text="Normal Toasty"
        android:textColor="@color/colorTextWhite" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/view_margin"
        android:onClick="displayToasty"
        android:text="Info Toasty"
        android:textColor="@color/colorTextWhite" />


    <Button
        android:id="@+id/btn_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/view_margin"
        android:padding="@dimen/view_margin"
        android:onClick="displayToasty"
        android:text="Warning Toasty"
        android:textColor="@color/colorTextWhite" />


    <Button
        android:id="@+id/btn_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/view_margin"
        android:onClick="displayToasty"
        android:text="Success Toasty"
        android:textColor="@color/colorTextWhite" />


    <Button
        android:id="@+id/btn_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:padding="@dimen/view_margin"
        android:onClick="displayToasty"
        android:text="Error Toasty"
        android:textColor="@color/colorTextWhite" />


</LinearLayout>